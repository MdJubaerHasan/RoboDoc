<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:background="@drawable/docinfobg">
    <TextView
        android:id="@+id/doc_name_id"
        android:layout_width="359dp"
        android:layout_height="70dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:layout_marginTop="80dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/docnamefield"
        android:gravity="center_vertical|center_horizontal"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:padding="8dp" />

    <TextView
        android:id="@+id/chamber_location_textID"
        android:layout_width="359dp"
        android:layout_height="140dp"
        android:layout_below="@+id/doc_name_id"
        android:layout_alignParentStart="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/chamberfiled"
        android:gravity="center"
        android:padding="8dp"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView123"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/doc_name_id"
        android:layout_alignParentStart="true"
        android:layout_marginStart="120dp"
        android:layout_marginTop="15dp"
        android:gravity="top|center"
        android:padding="4dp"
        android:text="চেম্বার এর ঠিকানাঃ"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/doc_email_textID"
        android:layout_width="359dp"
        android:layout_height="100dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="14dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:padding="8dp"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_below="@+id/chamber_location_textID"
        android:layout_alignParentStart="true"
        android:background="@drawable/emailfield" />

    <TextView
        android:id="@+id/textView124"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chamber_location_textID"
        android:layout_alignParentStart="true"
        android:layout_marginStart="130dp"
        android:layout_marginTop="15dp"
        android:gravity="top|center"
        android:padding="4dp"
        android:text="ইমেইল ঠিকানাঃ"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/doc_phone_textID"
        android:layout_width="359dp"
        android:layout_height="100dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="14dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:padding="8dp"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_below="@+id/doc_email_textID"
        android:layout_alignParentStart="true"
        android:background="@drawable/contactfield" />
    <TextView
        android:id="@+id/textView125"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/doc_email_textID"
        android:layout_alignParentStart="true"
        android:layout_marginStart="140dp"
        android:layout_marginTop="15dp"
        android:gravity="top|center"
        android:padding="4dp"
        android:text="ফোন নাম্বারঃ"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />


</RelativeLayout>